/* pages/login/login.wxss */
.page {
  height: 100%;
  overflow: hidden;
  text-align: center;
  background-color: #ffffff;
}
.logo {
  width: 243rpx;
  height: 243rpx;
  margin: 30px auto 0;
  text-align: center;
  line-height:243rpx;
  background-size:243rpx 243rpx;
}
.logo image {
  width: 181rpx;
  height: 76rpx;
  display: inline-block; 
  vertical-align: middle;
}

.desc {
  width: 100%;
  margin-top: 20px;
  font-size: 30rpx;
  color: #ffaa2b;
}
.login-form {
  padding: 0 80rpx;
  margin-top: 35px;
}

.weui-cells:before, .weui-cells:after {
  border: 0;
}
.weui-cell:before, .weui-cell:after {
  border: 0;
}

.weui-cells {
  text-align: left;
}
.weui-cell_input {
  border: 1px solid #ffaa2b;
  border-radius: 5px;
  margin-bottom: 20px;
}
.weui-cell_input .input-placeholder {
  font-size: 16px;
}
.login-form button {
  margin-top: 30px;
  background-color: #ffaa2b;
}
.reg-to {
  margin-top: 10px;
  text-align: right;
  color: #ffaa2b;
}
.reg-to navigator {
  font-size: 14px;
  text-decoration: underline;
}