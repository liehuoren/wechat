/* pages/user/address/add/add.wxss */
.weui-cells {
  margin-top: 0;
  font-size: 16px;
}
.weui-cells:before, .weui-cells:after {
  border: none;
}
.weui-cell:after {
  content:" ";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 1px;
  border-bottom: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}
.weui-cell:first-child:after {
  display:none
}
.weui-cell:before {
  display: none;
}
.textarea-placeholder {
  font-size: 14px;
}
.button-sp-area {
  position: fixed;
  bottom: 15px;
  width: 100%;
  height: 46px;
}
.weui-btn {
  width: 90%;
  margin: 0 auto;
}
.weui-cell__hd .weui-label {
  width: 85px;
}

