/* pages/user/user.wxss */
.userinfo{
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size: 100%;
}
.userinfo .avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border:2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
  overflow: hidden;
}

.userinfo .nickname {
  color: #fff;
  font-size: 14px;
}

.weui-cells {
  margin-top: 20px;
}
.weui-cells:before, .weui-cells:after {
  border: 0;
}
.weui-cell {
  font-size: 14px;
}