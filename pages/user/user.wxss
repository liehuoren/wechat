/* pages/user/user.wxss */
.page {
  background-color: #f7f7f7;
  height: 100%;
}
.userinfo{
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size: 100%;
}
.userinfo .avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border:2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
  overflow: hidden;
}

.userinfo .nickname {
  color: #fff;
  font-size: 14px;
}
.nav {
  width: 100%;
  margin-top: 15px;
}
.nav navigator {
  width: 96%;
  height: 50px;
  background: #fff;
  padding: 0 3%;
  font-size: 16px;
  line-height: 50px;
}
.nav .icon {
  display: inline-block;
  width: 18px;
  height: 18px;
  margin-right: 10px;
}
.nav image {
  width: 100%;
  height: 100%;
}
.nav .right {
  display: inline-block;
  width: 10px;
  height: 10px;
  float: right;
}