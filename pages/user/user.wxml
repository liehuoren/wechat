<!--pages/user/user.wxml-->
<view class="page">
  <view class="userinfo" style="background: url(/images/user-bg.png) center no-repeat">
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data class="nickname" type="userNickName"></open-data>
  </view>
  <view class="nav">
    <navigator url="/" style="border-bottom: 1px solid #999">
      <span class="icon"><image src="/images/icon-user-c.png"></image></span>
      <text>我的账号</text>
      <text style="float:right">150****1563</text>
    </navigator>
    <navigator url="/" style="border-bottom: 1px solid #999">
      <span class="icon"><image src="/images/icon-address.png"></image></span>
      <text>我的收货地址</text>
      <span class="right"><image src='/images/icon-right.png'></image></span>
    </navigator>
    <navigator url="/">
      <span class="icon"><image src="/images/icon-password.png"></image></span>
      <text>修改登录密码</text>
      <span class="right"><image src='/images/icon-right.png'></image></span>
    </navigator>
  </view>
  <view class="nav">
    <navigator url="/">
      <span class="icon"><image src="/images/icon-about.png"></image></span>
      <text>关于我们</text>
      <span class="right"><image src='/images/icon-right.png'></image></span>
    </navigator>
  </view>
</view>
