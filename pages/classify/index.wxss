/* pages/classify/index.wxss */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-search-bar__cancel-btn {
  color: #ffaa2b
}

.classify {
	width: 100%;
	height: 100%;
	display: flex;
	overflow: hidden;
}

.nav_left {
	width: 20%;
	background: #F6F6F9;
}

.nav_left_item {
	color: #7c7c7c;
	font-size: 26rpx;
	width: 100%;
	padding: 20rpx 0;
	text-align: center;
}

.nav_left_item.active {
	background: #fff;
  position: relative;
  color: #ffaa2b;
}

.nav_left_item.active:before {
    content: " ";
    position: absolute;
    display: block;
    width: 2px;
    height: 100%;
    background: #ffaa2b;
    top: 0;
    left: 0;
}
.nav_right {
	width: 80%;
	background: #fff;
}
.goods-list .weui-media-box {
  padding: 15px 5px;
}
.goods-list .weui-media-box__hd_in-appmsg {
  width: 80px;
  height: 80px;
}
.weui-media-box__title {
  font-size: 16px;
  line-height: 17px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
}
.weui-media-box__desc {
  font-size: 12px;
  margin-top: 5px;
}
.text-right {
  float: right;
}
.price {
  color: #ffaa2b;
  font-size: 13px;
}
.select {
  position: fixed;
  right: 10px;
  bottom: 10px;
  width: 80px;
  height: 80px;
}
.select image {
  width: 100%;
  height: 100%;
}
.nav_left_menu {
  display: block;
  top: 0;
  left: 100%;
  padding-left: 10px;
  margin: 0;
  padding: 0;
  position: absolute;
  z-index: 99;
  width: 70px;
}
.nav_left_ite {
  clear: both;
  width: 100%;
  border: none;
  display: block;
  margin: 0;
  padding: 0;
  float: left;
  line-height: 20px;
  position: relative;
  color:#7c7c7c;
  font-size:26rpx;
}
.nav_left_ite.first::before {
  content: '';
  position: absolute;
  bottom: 16px;
  left: 45%;
  margin-left: -50px;
  width: 0;
  height: 0;
  border-top: 8px solid rgba(255, 255, 255, 0);
  border-right: 8px solid #eee;
  border-bottom: 8px solid rgba(255, 255, 255, 0);
}