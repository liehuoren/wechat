<!--pages/about/index.wxml-->
<view class="page">
  <view class="logo" >
    <image src="{{logo_url}}"></image>
  </view>
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
          <view class="weui-cell__hd">
              <image src="/images/icon-user.png" style="margin-right: 15px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd">联系人</view>
          <view class="weui-cell__ft">{{person_name}}</view>
      </view>
      <view class="weui-cell">
          <view class="weui-cell__hd">
              <image src="/images/icon-mobile.png" style="margin-right: 15px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd">联系电话</view>
          <view class="weui-cell__ft">{{tel_phone}}</view>
      </view>
    </view>
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text" >
              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                  <view class="weui-media-box__title">
                    <image src="/images/icon-about.png" style="margin-right: 15px;vertical-align: middle;width:20px; height: 20px;"></image>
                    <text>公司简介</text>
                  </view>
                  <view class="weui-media-box__desc">{{information}}</view>
              </view>
          </view>
          <view class="weui-media-box weui-media-box_text" >
              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                  <view class="weui-media-box__title">
                    <image src="/images/icon-point.png" style="margin-right: 15px;vertical-align: middle;width:20px; height: 20px;"></image>
                    <text>店铺位置</text>
                  </view>
                  <view class="weui-media-box__desc">{{address}}</view>
                  <view class="weui-media-box__info">
                    <image src="/images/address.png" style='width:100%'></image>
                  </view>
                    
              </view>
          </view>
      </view>
    </view>
  </view>

</view>
